# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Optional: Firestore Emulator for local development
# FIRESTORE_EMULATOR_HOST=localhost:8080

# Accumulate Network Configuration
ACCUMULATE_API_URL=https://mainnet.accumulatenetwork.io/v3
ACCUMULATE_NETWORK=mainnet

# Polling Configuration
POLL_INTERVAL_SEC=45
USER_CONCURRENCY=8
MAX_RETRIES=3

# Discovery Configuration
DELEGATION_DEPTH=10
PENDING_PAGE_SIZE=100

# Firestore Collections (optional - uses defaults)
# USERS_COLLECTION=users

# Debug Options
DRY_RUN=false
ENABLE_DEBUG_DUMP=false
LOG_LEVEL=info
